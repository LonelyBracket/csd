{
  "kind": "collectionType",
  "collectionName": "episodes",
  "info": {
    "singularName": "episode",
    "pluralName": "episodes",
    "displayName": "Episode",
    "description": "Podcast episodes with guests and topics"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "guest": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::guest.guest",
      "inversedBy": "episodes"
    },
    "topics": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::topic.topic",
      "inversedBy": "episodes"
    },
    "duration": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "plays": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "episodeNumber": {
      "type": "integer",
      "min": 1
    },
    "audio": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["audio"]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
