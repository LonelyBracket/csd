{
  "kind": "collectionType",
  "collectionName": "topics",
  "info": {
    "singularName": "topic",
    "pluralName": "topics",
    "displayName": "Topic",
    "description": "Organize content by topics"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "icon": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "episodes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::episode.episode",
      "mappedBy": "topics"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "topic"
    },
    "guests": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::guest.guest",
      "mappedBy": "topics"
    }
  }
}
